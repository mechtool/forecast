{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "dist/images/forecast-icons"
    ],
    "rewrites": [
      {
        "source": "/apiKey",
        "function": "apiKey"
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|css|js)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=7200"
        } ]
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
